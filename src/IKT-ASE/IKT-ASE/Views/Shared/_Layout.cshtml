<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible">
    <title>@ViewBag.Title - IKT-ASE</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />


</head>

<body class="bg-dark text-light">
    <div class="container">
        <div>
            <div class="text-center mt-5">
                <h1 class="">IKT - ASE Overview</h1>
            </div>
            <div class="text-center">
                <h5 class="">4. Semester</h5>
            </div>

            <div class="mt-5">
                <nav class="navbar navbar-expand-lg bg-light navbar-light sticky-top">
                    <!-- Brand -->
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">IKT</a>

                    <!-- Toggler/collapsibe Button -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Links -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Books">Books</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Schedule">Schedule</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="LecturePlan">Lecture Plan</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Assignments">Assignments</a>
                            </li>

                            <!-- Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                    Courses
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="DAB" asp-action="Index">DAB</a>
                                    <a class="dropdown-item" asp-controller="GUI" asp-action="Index">GUI</a>
                                    <a class="dropdown-item" asp-controller="IKN" asp-action="Index">IKN</a>
                                    <a class="dropdown-item" asp-controller="SWD" asp-action="Index">SWD</a>
                                    <a class="dropdown-item" asp-controller="SWT" asp-action="Index">SWT</a>
                                    <a class="dropdown-item" asp-controller="PRJ" asp-action="Index">PRJ</a>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Links">Useful Links</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Misc" asp-action="Index">Misc</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer id="fw-footer">
        <h5 class="text-center">I do not take any responsibility for missed deadlines or wrong schedules. Use this site at your own risk</h5>
        <br />
        <div class="text-light">
            <p style="text-align: center;"><small>&COPY; HermansenDesigns &hyphen; 2018</small></p>
        </div>
    </footer>
</body>
</html>
